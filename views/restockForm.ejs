<%-include ('./partials/header')%>
  <div class="container">
    <div class="row">
      <div class="col">        
        <h1>Sign Up</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <form action="/user/restock/<%=restockProduct.id%>" method="POST">
          <div class="form-group row">
            <label for="name_product" class="col-sm-2 col-form-label">Product Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="name_product" name="name_product" value="<%=restockProduct.name_product%>">
            </div>
          </div>
          
          <div class="form-group row">
            <label for="stock" class="col-sm-2 col-form-label">Stock</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" id="stock" name="stock" value="0">
            </div>
          </div>
    
          <input class="btn btn-primary" type="submit" value="Restock">
        </form>
      </div>
    </div>
  </div>
  <%-include ('./partials/footer')%>