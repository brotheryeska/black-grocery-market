<%-include ('../partialUser/headerUser')%>
  <div class="container">
    <div class="row">
      <div class="col">        
        <h1>Edit Profile</h1>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <form action="/user/edit" method="POST">
          <div class="form-group row">
            <label for="full_name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="full_name" name="full_name" value="<%=selectedUser.full_name%>">
            </div>
          </div>
          
          <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="email" name="email" value="<%=selectedUser.email%>">
            </div>
          </div>

          <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="password" name="password" value="<%=selectedUser.password%>">
            </div>
          </div>
    
          <input class="btn btn-primary" type="submit" value="Edit Profile">
        </form>
      </div>
    </div>
  </div>
  <%-include ('../partialUser/footerUser')%>